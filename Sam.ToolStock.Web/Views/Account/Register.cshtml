@model Sam.ToolStock.Model.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
@{Html.EnableClientValidation();}
@{Html.EnableUnobtrusiveJavaScript();}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, "Name", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Patronymic, "Patronymic", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Patronymic, new { @class = "form-control", placeholder = "Patronymic" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Surname, "Surname", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Surname" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Email, "Email", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Phone, "Phone", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "+375(__) ___ - __ - __", id = "phone" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Password, "Password", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.ConfirmPassword, "Confirm Password", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.DepartmentId, "Your department", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.DepartmentId, ViewBag.Departments as SelectList, new {@class = "form-control" })
        </div>
    </div>
    <div class="col-sm-6">
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
}
