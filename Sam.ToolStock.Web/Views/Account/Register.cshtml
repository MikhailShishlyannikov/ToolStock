@model Sam.ToolStock.Model.ViewModels.RegisterViewModel
@{
    ViewBag.Title = Resources.Resource.Register;
}

<h2 class="text-center">@Resources.Resource.Register</h2>
@{Html.EnableClientValidation();}
@{Html.EnableUnobtrusiveJavaScript();}

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group row">
        @Html.LabelFor(m => m.Name, Resources.Resource.Name, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = Resources.Resource.Name })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Patronymic, Resources.Resource.Patronymic, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Patronymic, new { @class = "form-control", placeholder = Resources.Resource.Patronymic })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Surname, Resources.Resource.Surname, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = Resources.Resource.Surname })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Email, Resources.Resource.Email, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Resources.Resource.Email })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Phone, Resources.Resource.Phone, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "+375(__) ___ - __ - __", id = "phone" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Password, Resources.Resource.Password, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = Resources.Resource.Password })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.ConfirmPassword, Resources.Resource.ConfirmPassword, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = Resources.Resource.ConfirmPassword })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.DepartmentId, Resources.Resource.YourDepartment, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.DropDownListFor(m => m.DepartmentId, ViewBag.Departments as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-5">
            <button type="submit" class="btn btn-primary">@Resources.Resource.Register</button>
        </div>
        <div class="col-sm-7 align-middle text-right">
            @Html.ActionLink(Resources.Resource.BackToMainPage, "Index", "Home", null, new { @class = "align-middle" })
        </div>
    </div>
}
