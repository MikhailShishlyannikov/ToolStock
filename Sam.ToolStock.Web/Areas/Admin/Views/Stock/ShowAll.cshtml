@model IEnumerable<Sam.ToolStock.Model.ViewModels.StockViewModel>

@{
    ViewBag.Title = Resources.Resource.AllStocks;
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <strong class="card-title">Stock Table</strong> @Html.ActionLink(Resources.Resource.CreateNewStock, "Create", null, new { @class = "btn btn-primary ml-auto" })
        </div>
        <div class="table-stats order-table ov-h">
            <table class="table ">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>@Resources.Resource.Name</th>
                        <th>@Resources.Resource.UserAmount</th>
                        <th>@Resources.Resource.ToolAmount</th>
                        <th>@Resources.Resource.Deleted</th>
                        <th>@Resources.Resource.Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var stockViewModel in Model)
                        {
                            <tr>
                                <td>@stockViewModel.Id</td>
                                <td>
                                    <span class="name">@stockViewModel.Name</span>
                                </td>
                                <td>
                                    <span class="count">@stockViewModel.Users.Count()</span>
                                </td>
                                <td>
                                    <span class="count">@stockViewModel.Tools.Count()</span>
                                </td>
                                <td>
                                    <span class="name">@stockViewModel.IsDeleted</span>
                                </td>
                                <td>
                                    @{
                                        if (stockViewModel.IsDeleted)
                                        {
                                            @Html.ActionLink(Resources.Resource.Restore, "Restore", new { stockId = stockViewModel.Id }, new { @class = "btn btn btn-secondary col-10 ml-auto" })
                                        }
                                        else
                                        {
                                            @Html.ActionLink(Resources.Resource.Update, "Update", new { stockId = stockViewModel.Id }, new { @class = "btn btn-success col-10 ml-auto" })
                                            @Html.ActionLink(Resources.Resource.Delete, "Delete", new { stockId = stockViewModel.Id }, new { @class = "btn btn-danger col-10 ml-auto " })
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div> <!-- /.table-stats -->
    </div>
</div>