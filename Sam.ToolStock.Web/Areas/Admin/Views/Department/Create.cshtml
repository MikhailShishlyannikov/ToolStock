@model Sam.ToolStock.Model.ViewModels.DepartmentViewModel

<div class="card col-12">
    <div class="card-header">
        Create <strong>Department</strong>
    </div>
    <div class="card-body card-block">
        @using (Html.BeginForm("Create", "Department", FormMethod.Post, new{@class= "form-horizontal" }))
        {
            <div class="row form-group">
                <div class="col col-sm-1">
                    @Html.LabelFor(m => m.Name, new{@class = "form-control-label" })
                </div>
                <div class="col col-sm-11">
                    @Html.ValidationMessageFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Name" })
                </div>
            </div>
            <div class="form-actions form-group">
                <input type="submit" value="Create" name="Create" class="btn btn-primary">
               
            </div>
        }
        <form action="#" method="post" class="form-horizontal"></form>
    </div>
</div>
