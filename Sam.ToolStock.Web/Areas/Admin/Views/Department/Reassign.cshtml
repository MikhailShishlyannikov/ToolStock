@model Sam.ToolStock.Model.ViewModels.DepartmentReassigningViewModel

@{
    ViewBag.Title = @Resources.Resource.DepartmentReassigning;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            @Html.Raw(Resources.Resource.ReassigningUsersAndStocksMessage)
        </div>
        <div class="card-body card-block">
            @using (Html.BeginForm("Reassign", "Department", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(rvm => rvm.DeletingDepartmentId)
                if (Model.HasUsers)
                {
                    @Html.HiddenFor(m => m.HasUsers)
                    <div class="row form-group">
                        <div class="col col-md-3">
                            @Html.LabelFor(rvm => rvm.DepartmentIdForUsers, @Resources.Resource.NewDepartmentForUsers, new { @class = "form-control-label" })
                        </div>
                        <div class="col-12 col-md-9">
                            @Html.ValidationMessageFor(m => m.DepartmentIdForUsers)
                            @Html.DropDownListFor(
                                rvm => rvm.DepartmentIdForUsers, new SelectList(Model.TargetDepartments, "Id", "Name"), new {@class = "form-control"})
                        </div>
                    </div>
                }
                if (Model.HasStocks)
                {
                    @Html.HiddenFor(m => m.HasStocks)
                    <div class="row form-group">
                        <div class="col col-md-3">
                            @Html.LabelFor(rvm => rvm.DepartmentIdForStocks, @Resources.Resource.NewDepartmentForStocks, new { @class = "form-control-label" })
                        </div>
                        <div class="col-12 col-md-9">
                            @Html.ValidationMessageFor(m => m.DepartmentIdForStocks)
                            @Html.DropDownListFor(
                                rvm => rvm.DepartmentIdForStocks, new SelectList(Model.TargetDepartments, "Id", "Name"), new{@class = "form-control"})
                        </div>
                    </div>
                }
                <input type="submit" value=@Resources.Resource.Delete class="btn btn-danger float-right">
            }
        </div>
    </div>
</div>