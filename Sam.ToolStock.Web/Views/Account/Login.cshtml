@model Sam.ToolStock.Model.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<h1 class="text-center">Login</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Error of login", new { @class = "alert alert-danger" })

    <div class="form-group row">
        @Html.LabelFor(m => m.Email, "Email", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Email, "Password", new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <div class="form-check">
                @Html.CheckBoxFor(m => m.RememberMe, new {@class = "form-check-input" })
                @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
        <div class="col-sm-6 align-middle">
            @Html.ActionLink("Back to main page", "Index" , "Home", null, new{@class = "align-middle" })
        </div>
    </div>
}

