@model Sam.ToolStock.Model.ViewModels.LoginViewModel
@{
    ViewBag.Title = @Resources.Resource.LogIn;
}

<h1 class="text-center">@Resources.Resource.LogIn</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, @Resources.Resource.ErrorOfLogin, new { @class = "alert alert-danger" })

    <div class="form-group row">
        @Html.LabelFor(m => m.Email, @Resources.Resource.Email, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = @Resources.Resource.Email })
            @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Email, @Resources.Resource.Password, new { @class = "col-sm-3 col-form-label" })
        <div class="col-sm-9">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = @Resources.Resource.Password })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-5">
            <button type="submit" class="btn btn-primary">@Resources.Resource.LogIn</button>
        </div>
        <div class="col-sm-7 align-middle text-right">
            @Html.ActionLink(@Resources.Resource.BackToMainPage, "Index" , "Home", null, new{@class = "align-middle" })
        </div>
    </div>
}

