@model Sam.ToolStock.Model.ViewModels.ReassignViewModel

@{
    ViewBag.Title = "Department reassigning";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            Reassigning Users and Stocks from <strong>the deleting department</strong>
        </div>
        <div class="card-body card-block">
            @using (Html.BeginForm("Reassign", "Department", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(rvm => rvm.DeletingDepartmentId)
                <div class="row form-group">
                    <div class="col col-md-3">
                        @Html.LabelFor(rvm => rvm.DepartmentIdForUsers, "New department for users", new{@class= "form-control-label" })
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.DropDownListFor(
                            rvm => rvm.DepartmentIdForUsers, new SelectList(Model.TargetDepartments, "Id", "Name"), new{@class = "form-control"})
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        @Html.LabelFor(rvm => rvm.DepartmentIdForStocks, "New department for stocks", new { @class = "form-control-label" })
                    </div>
                    <div class="col-12 col-md-9">
                        @Html.DropDownListFor(
                            rvm => rvm.DepartmentIdForStocks, new SelectList(Model.TargetDepartments, "Id", "Name"), new{@class = "form-control"})
                    </div>
                </div>
                <input type="submit" value="Delete" class="btn btn-danger float-right">
            }
        </div>
    </div>
</div>